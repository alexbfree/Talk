.following.page {
  .subject-summaries {
    .subject-summary {
      display: table;
      overflow: hidden;
      width: 50%;

      &:before {
        display: none;
      }

      > a {
        display: table-cell;
        max-width: 33%;
        padding-bottom: 10px;
        vertical-align: top;
      }

      .metadata {
        display: none;
      }

      .last-comment {
        display: table-cell;
        padding: 0 0 10px 10px;
        vertical-align: top;
        width: 67%;
      }
    }
  }

  .discussion-summary {
    margin-top: -10px;
    padding: 0;

    .info .board-info {
      display: none;
    }

    .stats .counts {
      display: none;
    }

    .follow {
      display: none;
    }
  }

  .collection-summaries {
    .collection-summary {
      float: left;
      width: 50%;
    }
  }
}
