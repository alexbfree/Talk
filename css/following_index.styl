.following.page {
  .subject-summaries {
    .subject-summary {
      overflow: hidden;
      width: 50%;
      overflow: hidden;

      &:before {
        display: none;
      }

      > .preview {
        float: left;
        max-width: 33%;
        padding-bottom: 10px;
        vertical-align: top;
      }

      > .summary {
        box-sizing: border-box;
        float: left;
        max-width: 67%;
        padding: 0 0 10px 10px;
        vertical-align: top;
      }

      .title {
        display: block;
        margin-bottom: 5px;

        a {
          color: inherit;
          font-weight: bold;
        }
      }

      .metadata {
        display: none;
      }
    }
  }

  .discussion-summary {
    margin-top: -10px;
    padding: 5px;

    .info .board-info {
      display: none;
    }

    .stats .counts {
      display: none;
    }

    .follow {
      display: none;
    }
  }

  .collection-summaries {
    .collection-summary {
      box-sizing: border-box;
      float: left;
      padding-right: 10%;
      width: 50%;

      .subjects {
        margin: 0 -5px;

        .subject {
          padding: 0 5px 3px;
        }
      }
    }
  }
}
