.user.page {
  .message-list {
    font-size: 11px;

    .aux .compose {
      @extends #standard-button;
    }

    .message {
      @extends #rule-below;
      margin-bottom: 10px;
      padding-bottom: 10px;
      position: relative;

      &.unread:before {
        background: $blue;
        border-radius: 50%;
        content: "";
        height: 5px;
        margin: 5px 5px 0 0;
        position: absolute;
        right: 100%;
        top: 0;
        width: 5px;
      }

      .title {
        a {
          color: inherit;
          font-weight: bold;
        }
      }

      .body {
        color: $gray;
      }

      footer {
        color: $gray;
        img.avatar {
          display: none;
        }
      }
    }
  }

  .list {
    clearfix();
  }

  section.subjects {
    .list {
      overflow: hidden;
    }

    .subject {
      box-sizing: border-box;
      float: left;
      padding: 0 30px 30px 0;
      width: 50%;

      .preview {
        box-sizing: border-box;
        float: left;
        padding-right: 10px;
        width: 33%;

        a {
          display: block;

          img {
            width: 100%;
          }
        }
      }

      .summary {
        float: left;
        width: 67%;

        .title a {
          color: inherit;
          font-weight: bold;
        }

        .comment {
          .author {
            color: $gray;
          }
        }
      }
    }
  }

  section.collections {
    .collection {
      box-sizing: border-box;
      float: left;
      padding: 0 30px 30px 0;
      width: 50%;

      .title a {
        font-weight: bold;
        color: inherit;
      }

      .subjects {
        margin: 0 -5px;
        overflow: hidden;

        .subject {
          box-sizing: border-box;
          float: left;
          padding: 0 5px;
          width: 20%;

          img {
            width: 100%;
          }
        }
      }

      .comment .author {
        color: gray;
      }
    }
  }
}
