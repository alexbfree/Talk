.collection.new,
.collection.edit {
  .subjects {
    margin: 0;
    overflow: hidden;
    padding 0;

    .subject {
      box-sizing: border-box;
      float: left;
      list-style: none;
      padding: 0 10px 10px 0
      position: relative;
      width: 25%;

      img {
        max-width: 100%;
      }

      button[name="remove"] {
        position: absolute;
        right: 0;
        top: 0;
      }
    }
  }
}
