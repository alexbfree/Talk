.app-header {
  background: $gray-dark;
  color: $gray-light;
  font-size: 12px;
  line-height: 40px;
  margin-bottom: 20px;

  .wrapper {
    display: table;
    margin: 0 auto;
    width: 90%;
  }

  .group {
    display: table-cell;
    text-align: center;
    vertical-align: middle;

    &:first-child {
      text-align: left;
    }

    &:last-child {
      text-align: right;
    }
  }

  h1 {
    display: inline-block;
    font-size: 18px;
    font-weight: normal;
    line-height: 1;
    margin: 0;

    img {
      margin-top: -5px;
      vertical-align: middle;
    }
  }

  nav {
    display: inline-block;
    vertical-align: bottom;

    ul {
      margin: 0;
      padding: 0;

      li {
        display: inline-block;
        list-style: none;

        a {
          border-bottom: 3px solid transparent;
          box-sizing: border-box;
          color: inherit;
          display: block;
          height: 100%;
          margin: 0 5px;

          &:hover,
          &.active {
            color: $blue;
            text-decoration: none;
          }

          &.active {
            border-bottom-color: $blue;
          }
        }
      }
    }
  }

  a.return {
    background linear-gradient($blue, darken($blue, 33%));
    border: 1px solid rgba($black, 0.67);
    border-radius: 15px;
    box-shadow: 0 1px 0 rgba($white, 0.33);
    color: $white;
    font-size: 10px;
    font-weight: bold;
    padding: 3px 15px;
    text-shadow: 0 1px 0 rgba($black, 0.33);

    &:hover {
      background: linear-gradient($blue, darken($blue, 25%));
      text-decoration: none;
    }

    &:active {
      background: darken($blue, 33%);
      box-shadow: 0 1px 3px 0px rgba($black, 0.67) inset, 0 1px 0 rgba($white, 0.33);
    }
  }
}
