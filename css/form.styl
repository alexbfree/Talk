form {
  margin: 0;

  &.boxed {
    background: $gray-less-light;
    border: 1px solid $gray;
    overflow: hidden;
    padding: 0 10px;
  }

  .field,
  .action {
    margin: 10px 0;

    input,
    textarea {
      width: 100%;
    }
  }

  .action {
    text-align: right;
  }

  button {
    @extends #standard-button;
    
    &:disabled {
      background-color: $gray-less-light;
      color: $gray;
      cursor: auto;
    }
  }
}
