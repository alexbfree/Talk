ul.subject-summaries {
  margin: 0;
  overflow: hidden;
  padding: 0;

  > li {
    @extends #rule-left;
    box-sizing: border-box;
    float: left;
    list-style: none;
    padding: 0 10px;
    width: 20%;

    &:first-child:before {
      display: none;
    }
  }

  .subject {
    font-size: 11px;

    > a {
      display: block;

      img {
        width: 100%;
      }
    }

    .metadata {
      @extends #rule-below;
      display: table;
      line-height: 1.25;
      margin: 10px 0;
      padding-bottom: 10px;
      text-align: center;
      width: 100%;
      white-space: nowrap;

      .collections {
        button {
          @extends #standard-button;
        }
      }
    }
  }
}
