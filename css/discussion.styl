.discussion-focus {
  &.collection {
    .subjects {
      margin: 0 -5px;
      overflow: hidden;

      .subject {
        box-sizing: border-box;
        float: left;
        max-width: 50%;
        padding: 5px;
        position: relative;
        text-align: center;

        img {
          max-width: 100%;
        }

        .title {
          font-size: 10px;
          font-weight: bold;
        }
      }
    }
  }
}

.discussion, .messages {
  overflow: hidden;

  .follow {
    float: right;

    button {
      @extends #standard-button;

      &[name="unfollow"] {
        @extends #standard-button:active;
      }
    }
  }
  
  .feature {
    button {
      @extends #standard-button;
      
      &[name="unfeature"] {
        @extends #standard-button:active;
      }
    }
  }
  
  .pages {
    a {
      cursor: pointer;
    }
  }

  .post {
    > header {
      color: $gray;
      
      .title {
        font-size: 24px;
      }
    }
    
    &.admin   { border: 1px solid red; }
    &.science { border: 1px solid green; }
    &.mod     { border: 1px solid blue; }
    
    .content {
      padding: 5px 0;
    }
    
    > footer {
      color: $gray;
      text-align: right;
    }
  }

  .posts {
    margin: 0;
    padding: 0;

    > li {
      list-style: none;

      .post {
        background: $gray-less-light;
        margin: 10px 0;
        padding: 10px;
      }
    }
  }
}
