.recents.page
  .column > section + hr
    margin-bottom: 40px
  
  .board.discussions .discussion-summary
    padding: 10px
    cursor: pointer
    
    vendor('transition-property', 'background-color')
    vendor('transition-duration', 200ms)
    
    &:hover
      background-color: #E0E0E0
    
    .comment, .title
      max-width: 100%
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
      
      a
        color: #333333
        
        &:hover
          text-decoration: none
  
  .collection-summaries .collection-summary
    box-sizing: border-box
    float: left
    padding-right: 10%
    width: 50%
    
    a .subjects .subject
      padding: 0 5px 3px
  
  .collections .list
    .collection
      box-sizing: border-box
      float: left
      padding: 0 30px 30px 0
      width: 50%
      
      .title a
        font-weight: bold
        color: inherit
      
      .subjects
        margin: 0 -5px
        overflow: hidden
        
        .subject
          box-sizing: border-box
          float: left
          padding: 0 5px
          width: 20%
          
          img
            width: 100%
      
      .comment .author
        color: gray
