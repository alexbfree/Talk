.radio-subject-viewer
  
  .image-stack
    margin: 0 0 8px 0
    position: relative

  img
    position: absolute
    width: 100%

    &.main
      opacity: 0.5

  input
    border-radius 3px
    box-sizing: border-box
    height 3px
    margin: 6px 0
    outline: none
    padding: 1px
    width: 100%

  svg
    fill-opacity: 0
    position: absolute
    stroke: #ccc
    width: 100%
    z-index: 1

    g.contours
      transition: opacity 200ms linear
      
      path
        stroke-width: 1.35px
        opacity: 1

  .radio-metadata         
    margin-top: 15px

    .metadata
      list-style: none
      margin: 0
      padding: 0

      li
        box-sizing: border-box
        clearfix()
        padding: 4px 10px
        text-align: right
        &:nth-child(2n)
          background: #f6f6f6
        &:nth-child(2n + 1)
          background: white

        strong, a
          float: left
