.war-diary-subject-viewer

  ul
    margin: 10px 0
    padding: 0

    li
      margin: 0 0 6px 0
      padding: 3px 20% 3px 3px

      &:not(.archives-link):hover
        background: #f7f7f7

    label
      display: block
      font-weight: 700

    .archives-link
      margin: 10px 0

      a
        color: #888

        &:hover
          color: #333

a.user .role.historian 
  @extend a.user .role.scientist

