<div class="panel" style="display:none">	
  <%- unless @collections.empty? %>
    <h2>Collections</h2>
    <div>
      <ul>
        <%- @collections.each do |collection| %>
          <li class="item"><%= link_to truncate(collection.name, :length => 30, :separator => ' '), collection_path(collection.zooniverse_id) %> (<%= collection.assets.size %> items)</li>
        <% end -%>
      </ul>
    </div>
  <%- else -%>
    <h2>No Collections Yet</h2>
  <% end -%>
</div>

<div class="panel">
  <%- @collections.each do |collection| %>
    <div class="collection item">
      <h2><%= link_to truncate(collection.name, :length => 30, :separator => ' '), collection_path(collection.zooniverse_id) %></h2>
      <div class="film">
        <% collection.assets.each do |asset| %>
          <%= image_tag(asset.location, :width => 29, :height => 29) %>
        <% end -%>
      </div>
    </div>
  <% end -%>
</div>
