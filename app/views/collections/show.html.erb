<div class="upper-row">
	<div class="rhc">
		<div class="collection-viewer">
			<% unless @collection.assets.empty?%>
				<%= image_tag(@collection.assets.first.location, :class => "collection-large", :id => "asset-image", :height => 216) %>		
			<% end %>
			<%= render :partial => "shared/collection_as_focus" %>
		</div>
		<%= render :partial => "shared/list_of_discussions" %>	
		<%= render :partial => "shared/list_of_mentions" %>	
		<%= render :partial => "shared/tags_for_focus" %>	
	</div>
	
	<div class="lhc">
		<h1 class="collection-title"><%= @collection.name %></h1>
	</div>

</div>

<div class="lower-row">
	<div class="lhc">		
		<%= render :partial => "shared/comment_short_new" if current_zooniverse_user %>			
		<div class="comments-list">
			<%= render :partial => "shared/stream" %>
		</div>
	</div>
	<div class="rhc">		
							
	</div>
</div>