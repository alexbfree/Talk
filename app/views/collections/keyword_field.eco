<div class="keyword">
  <select class="operator">
    <option value="true">include</option>
    <option value="false" <% if @include is false: %>selected="selected"<% end %>>exclude</option>
  </select>
  
  <input type="text" class="tag" placeholder="Tag" value="<%= @keyword %>" />
  <button type="button" name="remove-keyword">&times;</button>
</div>
