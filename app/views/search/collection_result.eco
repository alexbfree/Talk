<% { imageIn } = require('controllers/subject_viewer') %>
<% moment = require 'moment/moment' %>

<div class="collection-result">
  <div class="preview">
    <a href="#/collections/<%= @id %>">
      <% for location in @location: %>
        <img src="<%= imageIn location %>" class="thin-frame preview" />
      <% end %>
    </a>
  </div>
  
  <div class="summary">
    <div class="title">
      Collection <a href="#/collections/<%= @id %>"><%= @name %></a>
    </div>
    <div class="metadata">
      Last updated
      <span class="timestamp">
        <span class="relative"><%= moment(@updated_at).fromNow() %></span>
        <span class="absolute"><%= moment(@updated_at).format('LLL') %></span>
      </span>
    </div>
  </div>
</div>
