<form class="new-board">
  <input type="hidden" name="category" value="<%= @category %>">

  <label for="title">
    <h4>Title</h4>
    <input type="text" name="title">
  </label>

  <label for="description">
    <h4>Description</h4>
    <textarea name="description"></textarea>
  </label>

  <div class="action">
    <button type="submit" name="submit">Create Board</button>
  </div>
</form>
