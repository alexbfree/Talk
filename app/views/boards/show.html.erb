<div class="upper-row">
	<div id="board-heading" class="panel boards">
		<h1><%= @board.title %></h1>
		<%= render :partial => "shared/meta_for_discussion" %>	
		<p><%= @board.description %></p>
	</div>
</div>

<div class="lower-row">
	<div class="lhc">		
		<div class="discussions-list">
			<%= render :partial => "shared/list_of_discussions_board", :locals => { :id_of_box => "discussions-list" } %>
		</div>		
		
		<%= page_bar @page,@number_of_pages%>
			
	</div>
	<div class="rhc">
		<%= render :partial => "shared/zooniverse_extras" %>			
		<%= render :partial => "shared/project_link" %>	
		<%= render :partial => "shared/help_wanted" %>									
	</div>
</div>