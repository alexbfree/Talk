<div class="short-comment-form">
  <%= form_for [@discussion, @comment] do |f| %>
    <div id="short-counter"></div>
    <h2 class="short-comment-prompt">What do you think?</h2>
    <%= f.text_area :body, :rows => 3, :cols => 40, :maxlength => 140, :id => "short-text" %>
    <p><%= submit_tag 'Submit' %></p>
    <div class="push"></div>
  <% end -%>
</div>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    Talk.textcount.init();
  });
</script>
