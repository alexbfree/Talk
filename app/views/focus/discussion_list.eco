<header><%= @name %></header>

<ul>
  <% for discussion in @list: %>
    <li>
      <%- require('views/discussions/summary') discussion %>
    </li>
  <% end %>
  
  <% if @category: %>
    <li>
      <div class="new-discussion">
        <label>Want to start a new <%= @category %> discussion?</label>
        <button>Create a New Post</button>
      </div>
    </li>
  <% end %>
</ul>
