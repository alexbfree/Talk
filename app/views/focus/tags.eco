<% tags = @tags.map (tag) -> tag._id %>

<div class="hashtags">
  <h3>Hashtags</h3>
  <% if tags.length > 0: %>
    <ul>
      <% for tag in tags: %>
        <li><a href="#/hashtags/<%= tag %>" class="hashtag"><%= tag %></a></li>
      <% end %>
    </ul>
    
    <% if @subject: %>
      <a class="create-keyword-set" href="/#/collections/new/keywords/<%= tags.join('&') %>">Create a tag group</a>
    <% end %>
  <% end %>
</div>

