<!-- Displays an asset with meta data for discussion and comment -->

<div id="asset-as-focus">
	<h2 class="asset-name"><%= @asset.zooniverse_id.to_s %></h2>
	<%= image_tag(@asset.location, :class => "focus-main-image", :id => "asset-image", :height => 200) %>
	<div class="asset-meta">
		<ul>
			<li><%= @asset.coords.first.to_s %>, <%= @asset.coords.last.to_s %></li>
		</ul>
	</div>
	<div class="asset-actions">
		<ul>
			<li><%= link_to "Examine", "http://www.moonzoo.org/examine/#{@asset.zooniverse_id.to_s}" %></li>
			<%= render :partial => "collect" if current_zooniverse_user %>
		</ul>
	</div>
</div>