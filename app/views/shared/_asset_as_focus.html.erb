<!-- Displays an asset with meta data for discussion and comment -->

<div id="asset-as-focus" class="panel">
	<h2 class="asset-name"><%= @asset.zooniverse_id.to_s %></h2>
	<%= image_tag(@asset.location, :class => "focus-main-image", :id => "asset-image", :height => 200) %><br/>
	<div class="asset-meta">
		<ul>
			<li></li>
			<span style="float: LEFT;font-size:60%;color:#afafaf;text-align:LEFT;"><span style="color:;">COORDS</span><br/><%= @asset.coords.first.to_s %>, <%= @asset.coords.last.to_s %></span>
		</ul>
	</div>
</div>