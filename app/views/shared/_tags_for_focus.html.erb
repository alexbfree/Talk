<!-- Displays tags for a focus -->
<% unless @focus.keywords.empty? %>
	<div id="tags-for-focus" class="panel tags right">
		<h2><%= t 'homepage.keywords' %></h2>
		<div class="inner">
		  	<ul>
		    <%- @focus.keywords.each do |keyword| %>
		  		<li><%= link_to keyword, :controller => :search, :action => :index, :search => "keywords:#{keyword}" %></li>
		  	<% end -%>
			</ul>
			<div class="push"></div>
		</div>
	</div>
<% end %>