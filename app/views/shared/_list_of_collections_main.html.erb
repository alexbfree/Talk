<!-- Box for front page recent collections -->
<div id="<%= id_of_box %>" class="panel">
	<% collections_list.each do |c| %>
		<div class="recent-comment">
			<div class="comment-container">
				<div class="name"><%= c.name %></div>
				<div class="date">12 Users</div>
				<div class="comment-body"><%= c.description %></div>
			</div>
		</div>
	<% end %>
</div>