<!-- Box for front page recent assets -->
<div id="<%= id_of_box %>" class="panel">
	<% assets_list.each do |a| %>
		<div class="recent-comment">
			<%= link_to image_tag(a.thumbnail_location, :class => "recent-comment-user", :height => 40), :controller => :assets, :action => :show, :id => a.zooniverse_id %>
			<div class="comment-container">
				<div class="name"><%= a.name %></div>
				<div class="date">14 January 2010, 10.37 AM</div>
				<div class="comment-body"><%= link_to a.zooniverse_id, :controller => :assets, :action => :show, :id => a.zooniverse_id %></div>
			</div>
		</div>
	<% end %>
</div>