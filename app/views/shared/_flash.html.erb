<%- [:notice, :alert].each do |level| %>
  <%- if flash[level] %>
    <div id="<%= level.to_s %>" class="flash <%= level.to_s -%>" onclick="$('.<%= level.to_s %>').fadeOut();">
      <%- if flash[level] =~ /^<ul/ %>
        <%= flash[level] %>
      <%- else -%>
        <p><%= flash[level] %></p>
      <% end -%>
    </div>
  <% end -%>
<% end -%>

<script type="text/javascript" charset="utf-8">
  if(<%= flash[:notice].present? && flash[:alert].present? %>) {
    $(document).ready(function() {
      $('#alert').position({
        my: 'top',
        at: 'bottom',
        of: '#notice'
      });
    });
  }
</script>

<%- flash.clear %>
