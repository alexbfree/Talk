<div class="comment">
	<%= image_tag('default_user.png', :class => "short-comment-user", :height => 40) %>
	<div class="comment-container">
		<div class="name"><%= comment.author.name %></div><div class="comment-body"><%= raw markdown(comment_short.body) %></div>				
	</div>	
	<div class="date">
		<%- unless current_zooniverse_user && comment.author == current_zooniverse_user -%>
		<div class="vote-controls" style="margin-top:5px;float:right;">
			<span id="comment-vote-<%= comment.id %>"><%= link_to("RECOMMEND", vote_up_comment_path(comment), {:remote => true, :method => :post, :style => "color:#2276BB;margin: 0;"}) %></span>&nbsp;|&nbsp;<span id="report-link-<%= comment.id %>"><%= link_to("REPORT", report_comment_path(comment), {:remote => true, :method => :post, :style => "color:#2276BB;", :confirm => (t 'comments.report_comment_confirm') }) %></span>
		</div>
		<%- end -%>
	</div>
</div>
