<!-- Box for front page recent comments -->
<%= render :partial => "shared/comment_new" if current_zooniverse_user && @discussion %>
<div id="<%= id_of_box %>" class="panel">
	<% comments_list.each do |c| %>
		<div class="recent-comment">
			<%= image_tag('default_user.png', :class => "recent-comment-user", :height => 40) %>
			<div class="comment-container">
				<div class="name"><%= c.author.name %></div>
				<div class="date"><%= long_date(c.created_at) %></div>
				<div class="comment-body"><%= (markdown(c.body)).gsub(/<\/?[^>]*>/,"") %></div>
			</div>
			<div class="push"></div>
		</div>
	<% end %>
</div>