<!-- Displays list of collections containing a focus -->
<% unless @collections.empty? %>
<div class="panel">	
	<h2><%= pluralize(@collections.size, "Collection") %></h2>
	<div class="inner">
		<ul>
	  	<%- @collections.each do |collection| %>
	  	  <li><%= link_to collection.name, collection_path(collection.zooniverse_id) %> (<%= collection.assets.size %> items)</li>
	  	<% end -%>
			<li class="new"><%= link_to "+ #{t('collection.startnewcol')}", new_collection_path %></li>
		</ul>		
	</div>
</div>
<% else %>
<div class="panel">	
	<h2>No Collections Yet</h2>
	<div class="inner">
		<ul>
			<li class="new"><%= link_to "+ #{t('collection.startnewcol')}", new_collection_path %></li>
		</ul>		
	</div>
</div>
<% end %>