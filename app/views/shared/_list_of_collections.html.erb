<!-- Displays list of collections containing a focus -->
<% unless @collections.empty? %>
<div class="panel">	
	<h2>Collections</h2>
	<div class="inner">
		<ul>
	  	<%- @collections.each do |collection| %>
	  	  <li><%= link_to collection.name, collection_path(collection.zooniverse_id) %></li>
	  	<% end -%>
		</ul>		
	</div>
</div>
<% end %>