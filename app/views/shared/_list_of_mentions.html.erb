<!-- Displays list of mentions of a focus -->
<% unless @mentions.empty? %>
	<div class="panel collection-list">
		<h2>Mentions</h2>
		<div class="inner">
  		<ul>
  		  <%- @mentions.each do |discussion| %>
  		    <li><%= link_to discussion.subject, "#" %></li>
  		  <% end -%>
  		</ul>
		</div>
	</div>
<% end %>