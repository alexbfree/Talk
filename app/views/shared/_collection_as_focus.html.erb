<!-- Displays a collection with meta data for discussion and comment -->

<% unless @collection.assets.empty?%>
	<% @collection.assets.each do |item| %>												
		<%= link_to image_tag(item.location, :class => "collection-thumbnail", :height => 50), object_path(item.zooniverse_id) %>
	<% end %>																	
<% else %>
	EMPTY COLLECTION				
<% end %>									
