<!-- Short comment without attachments - character limit? -->
<div class="short-comment">
	<%= image_tag('default_user.png', :class => "short-comment-user", :height => 40) %>
	<div class="comment-container">
		<span class="name"><%= comment_short.author.name %></span><div class="comment-body"><%= comment_short.body %></div>				
	</div>	
	<div class="date"><%= long_date(comment_short.created_at) %> <span class="vote-controls"><div id="report-<%= comment_short.id %>"><%= link_to "REPORT", "", :remote => true %></span> &middot; <a href="#">VOTE UP</a></div></div>
</div>