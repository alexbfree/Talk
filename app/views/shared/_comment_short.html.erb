<!-- Short comment without attachments - character limit? -->
<div class="short-comment">
	<%= image_tag('default_user.png', :class => "short-comment-user", :height => 40) %>
	<div class="comment-container">
		<span class="name"><%= comment_short.author.name %></span><div class="comment-body"><%= comment_short.body %></div>				
	</div>	
	<div class="date"><%= long_date(comment_short.created_at) %> <div class="vote-controls"><span id="report-link-<%= comment_short.id %>"><%= link_to("REPORT", {:controller => :events, :action => :report_comment, :comment_id => comment_short.id}, {:remote => true, :method => :post, :style => "color:#aaa;", :method => :post}) %></span>&nbsp;&nbsp;&nbsp;<a href="#" >&#8593;&nbsp;UP</a></div></div>
</div>
