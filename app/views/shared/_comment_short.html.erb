<div class="short-comment">
	<%= image_tag('default_user.png', :class => "short-comment-user", :height => 40) %>
	<div class="comment-container">
		<div class="comment-body">
		<div class="name"><%= link_to comment_short.author.name, user_path(comment_short.author.id) %></div><%= raw markdown(comment_short.body) %></div>				
	</div>	
	<div class="toolbar">
		<%- unless current_zooniverse_user && comment_short.author == current_zooniverse_user -%>
		<div class="vote-controls">
			<span id="comment-vote-<%= comment_short.id %>"><%= link_to("RECOMMEND", vote_up_comment_path(comment_short), {:remote => true, :method => :post, :style => "color:#2276BB;margin: 0;"}) %></span>&nbsp;|&nbsp;<span id="report-link-<%= comment_short.id %>"><%= link_to("REPORT", report_comment_path(comment_short), {:remote => true, :method => :post, :style => "color:#2276BB;", :confirm => (t 'comments.report_comment_confirm') }) %></span>
		</div>
		<%- end -%>
		<div class="date"><%= long_date(comment_short.created_at) %></div>
	</div>
</div>
