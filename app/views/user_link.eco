<a href="#/users/<%= @user_id %>" class="user">
  <% if @user_zooniverse_id: %>
    <img src="//zooniverse-avatars.s3.amazonaws.com/ouroboros/<%= @user_zooniverse_id %>" class="avatar" onerror="window.defaultAvatar(this)" />
  <% else: %>
    <%- require('views/users/default_avatar')() %>
  <% end %>

  <%= @user_name %>

  <% if @user_role: %>
    <span class="<%= @user_role %> role"><%= @user_role %></span>
  <% end %>
</a>
