<%= content_for :content_class do %>messages<% end %>

<div class="upper-row">
  <div class="rhc">
    <div class="right">
      <%= render :partial => "new_button" %>
    </div>
  </div>
  
  <div class="lhc">
    <h1><%= t 'messages.messages' %></h1>
    <div>
      <span class="current"><%= t('messages.inbox') %></span>
      &nbsp;|&nbsp;
      <%= link_to t('messages.sent'), sent_messages_path %>
    </div>
  </div>
</div>

<div class="lower-row">
  <div class="rhc">
    <%= render :partial => "meta_for_messages" %>	
  </div>
  
  <div class="lhc">
    <div class="message-list">
      <%- if @messages.empty? %>
        <%= t 'messages.none' %>
      <%- else -%>
        <%= render :partial => "message", :collection => @messages %>
      <% end -%>
    </div>
  </div>
</div>
