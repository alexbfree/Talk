<div class="upper-row">
  <h1><%= t 'messages.messages' %></h1>
  <div class="message-nav">
    <span class="current"><%= t('messages.inbox') %></span>
    &nbsp;|&nbsp;
    <%= link_to t('messages.sent'), sent_messages_path %>
  </div>
  <div class="rhc">
    <%= render :partial => "meta_for_messages" %>
  </div>
</div>

<div class="lower-row">
  <div class="lhc">
    <div class="message-list">
      <div class="news" style="float:right;margin-right:0;">
        <%= link_to "#{t('messages.startnew')}", new_message_path %>
      </div>
      <%- if @messages.empty? %>
        <%= t 'messages.none' %>
      <%- else -%>
        <%= render :partial => "message", :collection => @messages %>
      <% end -%>
    </div>
  </div>
  <div class="rhc">
    <%= render :partial => "shared/zooniverse_extras" %>
    <%= render :partial => "shared/project_link" %>
    <%= render :partial => "shared/help_wanted" %>
  </div>
</div>
