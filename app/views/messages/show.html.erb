<div class="upper-row">
  <h1><%= t 'messages.thread_with' %> <%= @thread_with_user.name %></h1>
</div>

<div class="lower-row">
	<div class="lhc">		
		<div class="message-list">
		  <%- @messages.each do |message| %>
		    <%- base = "#{ "outgoing " if message.sent_by? current_zooniverse_user }" -%>
		  	<div class="<%= "message-container #{base}" + cycle("even", "odd") -%>">
		  		<div class="subject"><%= message.title %></div>
		  		<div class="date"><%= long_date(message.created_at) %></div>
		  		<div class="body"><%= message.body %></div>
		  	</div>
			<% end -%>
		</div>			
	</div>
	<div class="rhc">
		<%= render :partial => "shared/zooniverse_extras" %>			
		<%= render :partial => "shared/project_link" %>	
		<%= render :partial => "shared/help_wanted" %>									
	</div>
</div>