<%= content_for :content_class do %>home<% end %>
<div>
  <div class="mode_switch">
    <a href="#" class="current" id="trending">Trending</a>&nbsp;|&nbsp;<a href="#" id="recent">Recent</a>
  </div>
  <h1>Community</h1>
</div>

<div class="rhc">
  <div class="featured">
    <h2>Featured</h2>
    <div class="list">
      <div class="ribbon"></div>
      <%- featured = Asset.find_by_zooniverse_id "AMZ40000qr" %>
      <%= link_to image_tag(featured.location, :width => 130, :height => 130), object_path(featured.zooniverse_id) %>
      <div class="box_shadow"></div>
      <p>You may see featured objects, collections, or projects to <a href="#">take part</a> in here.</p>
    </div>
  </div>
</div>

<div class="lhc">
  <div id="objects" class="assets objects">
    <h2>OBJECTS</h2>
    <div class="list">
      <p class="loading">Loading..</p>
    </div>
  </div>
  
  <div id="collections" class="collections">
    <h2>COLLECTIONS</h2>
    <div class="list">
      <p class="loading">Loading..</p>
    </div>
  </div>
  
  <div class="lower_home">
    <div id="discussions" class="discussions">
      <h2>DISCUSSIONS</h2>
      <div class="list">
        <p class="loading">Loading..</p>
      </div>
    </div>
    
    <div id="comments-or-keywords" class="keywords last">
      <h2>KEYWORDS</h2>
      <div class="list">
        <p class="loading">Loading..</p>
      </div>
    </div>
  </div>
  <div class="push"></div>
</div>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    OCT.home.init();
  });
</script>