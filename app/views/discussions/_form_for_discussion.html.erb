<%= content_for :page_includes do %>
  <%= javascript_include_tag "markitup/jquery.markitup" %>
  <%= javascript_include_tag "markitup/sets/talk/set" %>
  <%= javascript_include_tag "jquery.a-tools" %>
  <%= javascript_include_tag "jquery.annotate" %>
  <%= javascript_include_tag "jquery.colorbox-min" %>
  <%= stylesheet_link_tag "annotation" %>
  <%= stylesheet_link_tag "colorbox" %>
  <link rel="stylesheet" href="/javascripts/markitup/skins/simple/style.css" type="text/css" media="screen" charset="utf-8">
  <link rel="stylesheet" href="/javascripts/markitup/sets/talk/style.css" type="text/css" media="screen" charset="utf-8">
<% end -%>

<%- if @focus && @focus.is_a?(Asset) %>
  <%= link_to image_tag(@focus.location, :id => "asset-image", :class => "discussed-asset", :title => @focus.zooniverse_id), @focus.location, :class => 'lightbox' %>
  <div id="new-comment-annotation" style="display: none;">
    <%= image_tag @focus.location, :class => "comment-focus" %>
  </div>
<% end -%>

<%= form_for @discussion do |f| %>
  <span>
    <p class="label">Subject</p>
    <%= f.text_field :subject, :size => 80 %>
  </span>
  
  <%= f.fields_for :comments, @comment do |builder| %>
    <div class="comment-form">
      <h2>First comment</h2>
      <%= builder.text_area :body, :rows => 6, :cols => 40, :class => "comment_body", :style => "display: inline;" %>
      <%= hidden_field_tag('discussion[focus_type]', @focus.class.name) if @focus %>
      <%= hidden_field_tag('discussion[focus_id]', @focus.id) if @focus %>
      <%= hidden_field_tag('board_id', @board) if @board %>
      <div class="comment-preview in-use"></div>
      <%= submit_tag 'Submit' %>
    </div>
  <% end -%>
<%- end %>
