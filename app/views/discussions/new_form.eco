<form class="new-board-discussion">
  <header>Begin a new discussion:</header>
  <input type="hidden" name="category" value="<%= @category %>">
  <input type="hidden" name="board_id" value="<%= @zooniverse_id %>">
  <label for="title">Title<input type="text" name="title"></label>
  <label for="comment">Post<textarea name="comment"></textarea></label>
  <input type="submit" name="submit" value="Create new Discussion">
</form>
