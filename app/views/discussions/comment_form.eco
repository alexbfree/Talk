<div class="respond">
  <h4>Leave a post here:</h4>

  <form class="new-comment boxed">
    <div class="field">
      <%- require('views/markdown') class: 'comment', name: 'comment', placeholder: 'Leave a comment' %>
    </div>

    <div class="action">
      <button type="submit">Submit</button>
    </div>
  </form>
</div>
