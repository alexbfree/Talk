<% userLink = require 'views/user_link' %>
<% moment = require 'moment/moment' %>

<div class="post">
  <header>
    <%- userLink link: @comment, avatar: true %>
  </header>
  
  <div class="content">
    <%= @comment.body %>
  </div>
  
  <footer>
    Posted <%= moment(@comment.created_at).fromNow() %>
  </footer>
</div>
