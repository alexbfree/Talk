<%= content_for :page_includes do %>
  <%= javascript_include_tag "jquery.annotate" %>
  <%= stylesheet_link_tag "annotation" %>
  <link rel="stylesheet" href="/stylesheets/jquery-ui-1.8.7.custom.css" type="text/css" media="all" />
<% end -%>

<div class="upper-row discussion-thread full-width">
  <div class="lhc">
    <h1 class="discussion-title">
      <%= title_for @focus %>
    </h1>
    <%= render :partial => "form_for_discussion" %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('.lightbox').colorbox();
    $("#discussion_comments_body").markItUp(mySettings);
    
    var width = <%= @focus.is_a?(Asset) ? @focus.size[0] : 0 %>;
    var height = <%= @focus.is_a?(Asset) ? @focus.size[1] : 0 %>;
    Talk.annotater.init('#new_discussion', '#new-comment-annotation', width, height);
  });
</script>
